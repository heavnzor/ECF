{% extends 'index.html.twig' %}


{% block main %}
	<h1>Formation</h1>
	<table class="table">
		<tbody>
			<tr>
				<th>Titre</th>
				<td>{{ formation.titre }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ formation.description|raw }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td><img src="{{ asset('build/uploads/photos/')}}{{ formation.image }}" width="150" height="auto" title="{{ formation.titre}} "/></td>
			</tr>
			{% for section in sections %}
				<tr>
					<th>Section :</th>
					<td>
						<a href="/section/{{ section.id }}">{{ section.titre }}</a>
					</td>
				</tr>
			{% endfor %}

			{% if is_granted('ROLE_USER') %}
				<tr>
					<th>Progression de la formation</th>
					{% if formation.learnState is same as (0) %}
						{% set state = 'Pas commencée' %}
					{% elseif formation.learnState is same as(1) %}
						{% set state = 'Terminée' %}
					{% else %}
						{% set state = 'En Cours' %}
						{% endif %}
						<td>{{ state }}</td>
					</tr>
				{% endif %}
				{% if is_granted('ROLE_INSTRUCTEUR') %}
					<tr>
						<th>Action</th>
						<td>
							<a href="{{ path('app_formation_edit', {'id': formation.id}) }}">Modifier</a>
						</td>
					</tr>
				{% endif %}
			</tbody>
		</tbody>
	</table>
{% endblock %}
