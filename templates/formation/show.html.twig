{% extends 'index.html.twig' %}


{% block main %}
	<h1>Formation</h1>
	<table class="table">
		<tbody>
			<tr>
				<th>Titre</th>
				<td>{{ formation.titre }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ formation.description }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td><img src="{{ asset('build/uploads/photos/')}}{{ formation.image }}" width="150" height="auto" title="{{ formation.titre}} "/></td>
			</tr>
			{% for section in sections %}
				<tr>
					<th>Section :</th>
					<td>
						<a href="/section/{{ section.id }}">{{ section.titre }}</a>
					</td>
				</tr>
			{% endfor %}

			{% if is_granted('ROLE_USER') %}
				<tr>
					<th>Etat de la formation</th>
					<td>{{ formation.learnState }}</td>
				</tr>
			{% endif %}
		</tbody>
	</tbody>
</table>
{% endblock %}
