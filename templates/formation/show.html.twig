{% extends 'index.html.twig' %}


{% block main %}
	<table>
		<tbody>
			<tr>
				<td>
					<h1>{{ formation.titre }}</h1>
				</td>
			</tr>
			<tr>

				<td>{{ formation.description|raw }}</td>
			</tr>
			<tr>
				<td><img src="{{ asset('build/uploads/photos/')}}{{ formation.image }}" width="150" height="auto" title="{{ formation.titre}} "/></td>
			</tr>
			{% for section in sections %}
				<tr>
					<td>
						<a href="/section/{{ section.id }}">{{ section.titre }}</a>
					</td>
				</tr>
			{% endfor %}

			{% if is_granted('ROLE_USER') %}
				<tr>
					{% if formation.learnState is same as(0) %}
						{% set state %}<a href="/progress/new/{{ formation.id }}">
							<button class="btn btn-primary">Commencer la formation</button>
						</a>
						{% endset %}
					{% elseif formation.learnState is same as(1) %}
						{% set state %}<button class="btn btn-success" href="#">Termin√©e</button>
						{% endset %}
					{% else %}
						{% set state %}<a  href="/progress/{{ formation.id}}"><button class="btn btn-warning">En cours</button></a>
						{% endset %}
					{% endif %}
					<td>{{ state }}</td>
				</tr>
			{% endif %}
			{% if is_granted('ROLE_INSTRUCTEUR') %}
				<tr>
					<th>Action</th>
					<td>
						<a href="{{ path('app_formation_edit', {'id': formation.id}) }}">Modifier</a>
					</td>
				</tr>
			{% endif %}
		</tbody>
	</tbody>
</table>{% endblock %}
