{% extends 'index.html.twig' %}
{% block main %}
	<div class="container text-center my-auto px-auto">
		<nav class="navbar navbar-expand-lg navbar-light bg-black">
			<div class="container mx-auto d-flex flex-wrap justify-content-center">
				<form class="d-flex flex-wrap flex-wrap justify-content-center mx-auto">
					<input class="form-control my-auto text-center" type="search" placeholder="Rechercher une formation" aria-label="Search">
					<input type="radio" class="btn-check px-4 my-auto" name="btnradio" id="btnradio1" autocomplete="off" checked>
					<label class="btn btn-outline-primary mx-2 pt-1 my-3" for="btnradio1">Toutes les formations</label>
					{% if is_granted('ROLE_USER') %}
						<input type="radio" class="btn-check px-4 my-auto" name="btnradio" id="btnradio2" autocomplete="off">
						<label class="btn btn-outline-info mx-2 pt-1 my-3" for="btnradio2">Formations en cours</label>
						<input type="radio" class="btn-check px-4 my-auto" name="btnradio" id="btnradio3" autocomplete="off">
						<label class="btn btn-outline-success mx-2 pt-1 my-3" for="btnradio3">Formations termin√©s</label>
					{% endif %}
				</form>
			</div>
		</nav>
		<hr>
	</div>
	<div class="card-group mx-auto justify-content-evenly">
		{% for formation in formations %}
			<a href="{{ path('app_formation_show', {'id': formation.id}) }}">
				<div class="card p-3">
					<div class="card-body text-center">
						<img src="{{ asset('build/uploads/photos/')}}{{ formation.image }}" class="img-thumbnail imgFormation" alt="{{ formation.titre}}">
						<h2 class="card-title ">{{ formation.titre}}</h2>
						<p class="card-text">{{ formation.description }}</p>
					</div>
				</div>
			</a>
		{% endfor %}
	</div>
	{% if formations is same as(null) %}
		<tr>
			<td colspan="6">Aucune formation pour le moment</td>
		</tr>
	{% endif %}
{% endblock %}
