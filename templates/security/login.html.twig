{% extends 'index.html.twig' %}

{% block main %}
<div class="container p-3 text-center">


	{% if error %}
		<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	{% if app.user %}
		<div class="mb-3">
			Vous êtes connecté {{ app.user.username }}
			<a href="{{ path('app_logout') }}"></a>
		</div>
	{% else %}
		<h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
		<form method="post">
			<label for="inputEmail">Email</label>
			<br>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required="required" autofocus="autofocus">
			<br>
			<label for="inputPassword">Password</label>
			<br>
			<input type="password" name="password" id="inputPassword" autocomplete="current-password" required="required">

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<br><br>
			<div class="checkbox mb-3">
				<label>
					<input type="checkbox" name="_remember_me">
					Se souvenir de moi
				</label>
			</div>
			<button class="btn btn-lg btn-primary" type="submit">
				Connexion
			</button>
		{% endif %}
	</form>
    </div>
{% endblock %}
