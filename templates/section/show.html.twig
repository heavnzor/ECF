{% extends 'index.html.twig' %}
{% block main %}
	<table class="table">
		<tbody>
			<tr>
				<strong>
					<h2>{{ section.formation }}</h2>
				</strong>
			</tr>
			<tr>
				<em>
					<p class="fs-4">{{ section.titre }}</p>
				</em>
			</tr>
			<tr>
				<ul>
					<p class='fs-5'>Cours :</p>
					{% for cours in section.cours %}
						<li>
							<a href="{{path('app_cours_show', {'id': cours.id}) }}">{{ cours.titre }}</a>
						</li>
					{% endfor %}
				</ul>
			</tr>
			<tr>
				<span class="fs-5">
					{% if quizz.id is not same as(null) %}
						<a href="{{path('app_quizz_show', {'id': quizz.id }) }}">Accéder au quizz</a>
					{% endif %}
				</span>
			</tr>
		</tbody>
	</tr>
</tbody></table><br><br>{% if is_granted('ROLE_USER') %}
<a href="{{ path('app_formation_show', { id: formation.id } ) }}">Retour à la formation</a><br><br>{% endif %}{% if is_granted('ROLE_INSTRUCTEUR') %}
<a href="{{ path('app_section_edit', {'id': section.id}) }}">Modifier</a>
<br><br>{% endif %}{% endblock %}
