{% extends 'index.html.twig' %}
{% block main %}
	<table class="table">
		<tbody>
			<tr>
				<strong><h1>{{ section.formation }}</h1></strong>
			</tr>
			<tr>
				<em><p class="fs-4">{{ section.titre }}</p></em>
			</tr>
			<tr>
				<ul>
					<p class='fs-5'>Cours :</p> 
					{% for cours in section.cours %}
						<li>
							<a href="{{path('app_cours_show', {'id': cours.id}) }}">{{ cours.titre }}</a>
						</li>
					{% endfor %}
				</ul>
			</tr>
		</tbody>
	</tr>
</tbody></table>
<a href='javascript:history.back()'>Retour</a><br><br>
{% if is_granted('ROLE_INSTRUCTEUR') %}
<a href="{{ path('app_section_index') }}">Retour aux sections</a><br><br>
<a href="{{ path('app_section_edit', {'id': section.id}) }}">Modifier</a>
<br><br>{% endif %}{% endblock %}
