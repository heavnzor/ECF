{% extends 'index.html.twig' %}
{% block main %}
	<table class="table">
		<tbody>
			<tr>
				<h1>{{ cours.titre }}</h1>
			</tr>
			<tr>
				<p>{% if cours.image is not same as(null) %}<img class="imgCours" src="{{ asset('build/uploads/photos/') }}{{ cours.image }}">{% endif %}{{ cours.cours|raw }}
					
				</p>


				<br>
			</tr>
			<tr>
				{% if cours.pdf is not same as(null) %}
					<span class="fs-4 mx-2"><a class="px-3" href="{{ asset('build/uploads/photos/') }}{{ cours.pdf }}">{{ cours.pdf }}</a> &#127385;</span>
				{% endif %}<br>
			</tr>
			<tr>


				<iframe width="560" height="315" src="https://www.youtube.com/embed/{{ cours.video }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

			</tr>
			<tr>
				<p>Leçon terminée ?<br>
					{% if coursProgress.coursFinished is same as(false) %}
						<a href='/cours/{{ cours.id }}?f=1'>Oui</a>
					{% else %}
						Oui
					{% endif %}
				</p>
			</tr>
			<tr>
				<a href='{{ path('app_section_show', {'id': cours.section.id}) }}'>Retour</a>
			</tr>
		</tbody>
	</table>
{% endblock %}
