{% extends 'index.html.twig' %}
{% block main %}
	<h1>Cours</h1>

	<table class="table">
		<tbody>
			
			<tr>
				<th>Cours</th>
				<td>{{ cours.cours }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td><img class="imgCours" src="{{ asset('build/uploads/photos/') }}{{ cours.image }}"></td>
			</tr>
			<tr>
				<th>Pdf</th>
				<td>
					<a href="{{ asset('build/uploads/photos/') }}{{ cours.pdf }}">{{ cours.pdf }}</a>
				</td>
			</tr>
			<tr>
				<th>Video</th>
				<td>
					<iframe width="560" height="315" src="https://www.youtube.com/embed/{{ cours.video }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
				</td>
			</tr>
		</tbody>
	</td>
</tr>
{% if is_granted('ROLE_USER') %}
	<tr>
		<th>Finished</th>
		<td>{{ cours.isFinished ? 'Oui' : 'Non' }}</td>
	</tr>
{% endif %}</tbody></table><a href="{{ path('app_cours_index') }}">Retour aux cours</a><br>{% if is_granted('ROLE_INSTRUCTEUR') %}<a href="{{ path('app_cours_edit', {'id': cours.id}) }}">Modifier</a>{% endif %}<br>{{ include('cours/_delete_form.html.twig') }}{% endblock %}
