{% extends 'index.html.twig' %}
{% block main %}
	<table class="table">
		<tbody>
			{% for cours in cours %}
				<tr>
					<h1>{{ cours.titre }}</h1>
					<p>{{ cours.cours|raw }}</p>
					{% if cours.image is not same as(null) %}
						<img class='imgFormation' src="{{ asset('build/uploads/photos/')}}{{ cours.image }}">
					{% endif %}

					<a href="{{ asset('build/uploads/photos/') }}" {{ cours.pdf }} target="_blank">


						<iframe width="560" height="315" src="https://www.youtube.com/embed/{{ cours.video }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
					</tr>
				</tr>
				<tr>
					<br><a href="{{ path('app_cours_show', {'id': cours.id}) }}">Voir</a><br>
					<a href="{{ path('app_cours_edit', {'id': cours.id}) }}">Modifier/supprimer</a>
				</tr>


			{% else %}
				<tr>
					<td colspan="7">Aucun cours trouv√©</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
